@model TheProgrammingQuiz.Web.ViewModels.Comments.CreateCommentInputModel

@{
    ViewData["Title"] = "Create Comment";
}

<html class="comment-background" lang="en">
<body class="comment-background">
    <h2 style="color: red">Add New Comment</h2>
    <hr />
    <div class="content" style="min-height: 500px">
        <div class="row" style="margin-right: 0px">
            <div class="col-md-4">
                <form role="form" asp-controller="Comment" asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Content" class="control-label"></label>
                        <textarea asp-for="Content" class="comment-textarea form-control" rows="7" placeholder="Leave a Comment"> </textarea>
                        <span asp-validation-for="Content" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" onclick="createCommentBtn()" value="Create" class="btn btn-default" />
                        <a role="button" asp-controller="Comment" asp-action="Index" class="btn btn-default">Back</a>
                    </div>
                </form>
            </div>
        </div>
        <div class="comment-rules" style="display: none">
            <p class="comment-rules-paragaph">
                <h3>Please observe our posting guidelines before posting:</h3>
                1. No obscene, racist, sexist, profane, raunchy, or similar offensive language.
                <br />
                2. No spamming, advertising, nonsense, or duplicate posts.
                <br />
                3. Any off-topic posts which distract from the primary topic of discussion are subject to removal, at the sole discretion of the Moderators.
                <br />
                4. Always act civil.
            </p>
        </div>
    </div>
</body>
</html>