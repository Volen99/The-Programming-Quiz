@model TheProgrammingQuiz.Web.ViewModels.Comments.CommentViewModel

@{
    ViewData["Title"] = "Delete Comment";
}

<html class="comment-background" lang="en">
<body class="comment-background">
    <h2 style="color: darkgray">Are you sure you want to delete this comment?</h2>
    <hr />
    <div class="content" style="min-height: 500px;">
        <div class="comment-tabs">
            <div class="tab-content">
                <div class="tab-pane active" id="comments-logout">
                    <ul class="media-list">
                        <li class="media">
                            <div class="media-body">
                                <div class="well well-lg">
                                    @{
                                        var data = new Dictionary<string, string>
                                        {
                                            {"Username", Model.Name }
                                        };
                                    }
                                    <h4 class="media-heading reviews">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Profile" asp-action="Index" asp-all-route-data="@data" title="Profile">@Model.Name</a>
                                    </h4>
                                    <ul class="media-date text-uppercase reviews list-inline">
                                        <li class="fa fa-calendar"></li>
                                        <li>@Model.CreatedOn</li>

                                        <li class="fa fa-exchange"></li>
                                        <li>@Model.ModifiedOn</li>
                                    </ul>
                                    <p class="media-comment">
                                        @Model.Content
                                    </p>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div>
            <form role="form" method="post" asp-controller="Comment" asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-default" />
                <a role="button" asp-action="Index" asp-route-id="@Model.Id" class="btn btn-default">Back to Comments</a>
            </form>
        </div>
    </div>
</body>
</html>